generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ListenChannel {
  channelId String @id
}

model User {
  email            String    @id
  registrationDate DateTime? @default(now())
  phoneNumber      Int?
  firstName        String
  lastName         String
  relation         String
  school           String
  teacher          String?
  grade            Int?
  latinLevel       String?
  joinCode         String?   @unique @default(dbgenerated())
  joined           Boolean?  @default(false)
  discordId        String?   @unique
}

model Events {
  id          String   @id @default(dbgenerated())
  name        String
  description String?
  link        String?
  startTime   DateTime
  endTime     DateTime
}
